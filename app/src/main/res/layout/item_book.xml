<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_book"
    android:layout_width="@dimen/book_width"
    android:layout_height="wrap_content"
    android:background="@color/color_white"
    android:orientation="vertical"
    android:clickable="true"
    android:focusable="true">

    <com.noober.background.view.BLImageView
        android:id="@+id/imageView_book"
        android:layout_width="@dimen/book_width"
        android:layout_height="@dimen/book_height"
        app:bl_corners_radius="@dimen/radius_lite"
        app:bl_solid_color="@color/color_bg_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_book_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_lite"
        android:gravity="center"
        android:text="书名"
        android:textAlignment="center"
        android:textColor="@color/color_main_black"
        android:textSize="@dimen/text_body_lite"
        android:maxLines="2"
        android:ellipsize="end"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView_book" />


</androidx.constraintlayout.widget.ConstraintLayout>